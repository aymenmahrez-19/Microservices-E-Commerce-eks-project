pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        ECR_ACCOUNT = '242201296943'
        IMAGE_NAME = 'emailservice'
        IMAGE_TAG = '2'
        ECR_REPO = "${ECR_ACCOUNT}.dkr.ecr.${AWS_REGION}.amazonaws.com/${IMAGE_NAME}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Login to ECR') {
            steps {
                script {
                    sh """
                    aws ecr get-login-password --region ${AWS_REGION} | \
                    docker login --username AWS --password-stdin ${ECR_REPO}
                    """
                }
            }
        }

        stage('Tag and Push Image') {
            steps {
                script {
                    sh """
                    docker tag ${IMAGE_NAME}:latest ${ECR_REPO}:${IMAGE_TAG}
                    docker push ${ECR_REPO}:${IMAGE_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Docker image pushed successfully to ECR!"
        }
        failure {
            echo "Failed to push Docker image to ECR."
        }
    }
}
