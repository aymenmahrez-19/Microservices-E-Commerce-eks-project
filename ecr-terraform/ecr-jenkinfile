pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['apply', 'destroy'],
            description: 'üîß Select the Terraform action to perform (apply = create/update, destroy = delete all)'
        )
    }

    environment {
        TERRAFORM_DIR = 'ecr-terraform'
        AWS_REGION = 'us-east-1'
        AWS_PROFILE = 'default' // Change if using a specific profile
    }

    options {
        // Keep only the last 10 builds to save space
        buildDiscarder(logRotator(numToKeepStr: '10'))
        // Timeout for the entire pipeline
        timeout(time: 60, unit: 'MINUTES')
    }

    stages {
        stage('Checkout Git Repository') {
            steps {
                echo 'üîÑ Checking out Git repository...'
                checkout scm
            }
        }

        stage('Terraform Version') {
            steps {
                sh 'terraform --version'
            }
        }

        stage('Terraform Init') {
            steps {
                dir(env.TERRAFORM_DIR) {
                    echo '‚öôÔ∏è Initializing Terraform...'
                    // Include backend config if needed
                    sh 'terraform init -input=false -reconfigure'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir(env.TERRAFORM_DIR) {
                    echo '‚úÖ Validating Terraform configuration...'
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir(env.TERRAFORM_DIR) {
                    echo 'üìã Creating Terraform plan...'
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                dir(env.TERRAFORM_DIR) {
                    echo 'üöÄ Applying Terraform plan...'
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { params.ACTION == 'destroy' }
            }
            steps {
                dir(env.TERRAFORM_DIR) {
                    echo 'üí• Destroying Terraform-managed infrastructure...'
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }

    post {
        always {
            echo 'üîö Pipeline finished.'
        }
        success {
            echo '‚úÖ Pipeline completed successfully.'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs for details.'
        }
    }
}

environment {
    AWS_REGION = 'us-east-1'
    TERRAFORM_DIR = 'ecr-terraform'
}

stages {
    stage('Terraform Init') {
        steps {
            withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                dir(env.TERRAFORM_DIR) {
                    sh '''
                    export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                    export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                    terraform init -input=false -reconfigure
                    '''
                }
            }
        }
    }
    ...
}
